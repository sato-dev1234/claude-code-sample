{
  "language": "japanese",
  "model": "opus",
  "alwaysThinkingEnabled": false,
  "permissions": {
    "allow": [
      "AskUserQuestion",
      "TodoWrite",
      "Task",
      "Bash",
      "SlashCommand",
      "Skill",
      "Read",
      "Glob",
      "Grep",
      "Write",
      "Edit",
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:arxiv.org)"
    ],
    "ask": [
      "Bash(git push *)"
    ],
    "deny": [
      "Bash(git reset --hard *)",
      "Bash(git clean *)",
      "Bash(git stash drop *)",
      "Bash(git branch -D *)",
      "Bash(git restore *)"
    ]
  },
  "hooks": {
    "SubagentStart": [
      {
        "matcher": "ticket-reader|ticket-writer|knowledge-reader|knowledge-writer|tdd-runner",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/subagent-start-context.sh"
          }
        ]
      }
    ]
  }
}
